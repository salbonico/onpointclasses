<%= form_for :user, url: '/users' do |f| %>
  Username: <%= f.text_field :name %>
  Password: <%= f.password_field :password %>
  Email: <%= f.email_field :email %>
  Teacher?: <%= check_box("user", "teacher", {}, "true", "false") %>
  <%= f.submit "Sign Up" %>
<% end %>

<h1> Or: <br>
<%= link_to('Log in with Facebook!', '/auth/facebook') %></h1>
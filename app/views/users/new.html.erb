<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this user from being signed up:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>



<%= form_for :user, url: '/users' do |f| %>
  Username: <%= f.text_field :name %>
  Password: <%= f.password_field :password %>
  Email: <%= f.email_field :email %>
  <%= f.submit "Sign Up" %>
<% end %><br>
Existing user log in: <button onclick='window.location.href="/login";'>Log in</button><br>
<h2> <%= link_to('Log in with Facebook!', '/auth/facebook') %></h2>